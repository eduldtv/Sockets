<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaseChat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a la app Chat Sockets. Let's go chat!"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"

            android:text="Soy el servidor"
            style="@style/bocadilloServidor"
            />

        <TextView
            android:id="@+id/textView2"

            android:text="Soy el cliente"
            style="@style/bocadilloCliente" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="405dp">

            <LinearLayout
                android:id="@+id/linearLayoutChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <EditText
        android:id="@+id/editTextMensajes"
        android:layout_width="283dp"
        android:layout_height="80dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_weight="1"
        android:background="@drawable/enviar"
        android:onClick="enviarMensaje"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>